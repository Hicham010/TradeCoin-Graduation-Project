{
  "extends": "solhint:recommended",
  "plugins": ["prettier"],
  "rules": {
    "code-complexity": ["error", 5],
    "compiler-version": ["error", ">0.8.3"],
    "constructor-syntax": "error",
    "no-empty-blocks": ["warn", { "ignoreConstructors": true }],
    "reason-string": ["warn", { "maxLength": 64 }],
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ]
  }
}
